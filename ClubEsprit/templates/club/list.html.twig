{% extends 'base.html.twig' %}

{% block title %}Hello ClubListController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		<h2>
			List des Clubs
		</h2>

		<table border="2">

			<tr>
				<td>
					REF
				</td>
				<td>
					CreatedAt
				</td>
				<td>
					supprimer
				</td>
				<td>
					modifier
				</td>
							<td>
					afficher
				</td>

			</tr>

			{% for i in list %}
				<tr>
					<td>
						{{ i.REF }}
					</td>
					<td>
					{{ i.CreatedAt|date('Y-m-d') }}
					</td>
					<td>
						<form action={{ url('app_clubRemove',{'ref':i.getREF()} ) }}>
							<input type="submit" value="Supprimer"/>
						</form>
					</td>
					<td>
						<form action={{ url('app_clubModify',{'ref':i.getREF()} ) }}>
							<input type="submit" value="Modifier"/>
						</form>
					</td>
							<td>
						<form action={{ url('app_clubShow',{'ref':i.getREF()} ) }}>
							<input type="submit" value="Afficher"/>
						</form>
					</td>

				{% endfor %}
			</tr>
		</table>
		<br>
		<form action={{ url('app_clubAdd') }}>
			<input type="submit" value="Ajouter Club"/>
		</form>



						<form action={{ url('app_clubRouteStudent') }}>
									<input type="submit" value="Liste des Students"/>
								</form>

				<form action={{ url('app_clubRouteClassroom') }}>
									<input type="submit" value="Liste des Classrooms"/>
								</form>


				<form action={{ url('app_clubRouteStudent') }}>
									<input type="submit" value="Liste des Students"/>
								</form>
	</div>
{% endblock %}
